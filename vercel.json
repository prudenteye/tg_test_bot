{
  "version": 2,
  "functions": {
    "api/*.py": {
      "runtime": "python3.11"
    }
  },

  "routes": [
    { "src": "/api/webhook", "dest": "/api/webhook.py" },
    { "src": "/api/conn", "dest": "/api/conn.py" },
    { "src": "/", "dest": "/index.html" }
  ],

  "git": {
    "ignore": [
      "db/**",
      "scripts/**"
    ]
  }
}