{
  "version": 2,
  "functions": {
    "api/*.py": {
      "runtime": "python3.11"
    }
  },
  "builds": [
    { "src": "api/*.py", "use": "@vercel/python" }
  ],
  "routes": [
    { "src": "/api/webhook", "dest": "/api/webhook.py" },
    { "src": "/api/conn", "dest": "/api/conn.py" },
    { "src": "/", "dest": "/index.html" }
  ],
  "ignoreCommand": "echo Ignoring dev folders && echo",
  "git": {
    "ignore": [
      "db/**",
      "scripts/**"
    ]
  }
}